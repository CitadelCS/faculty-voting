<p id="notice"><%= notice %></p>

<h1>Prog Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prog_users.each do |prog_user| %>
      <tr>
        <td><%= prog_user.user.email %></td>
        <td><%= prog_user.role.name %></td>
        <td><%= link_to 'Show', prog_user %></td>
        <td><%= link_to 'Edit', edit_prog_user_path(prog_user) %></td>
        <td><%= link_to 'Destroy', prog_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

